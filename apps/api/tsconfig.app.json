{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "nodenext",
    "types": ["node"],
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "paths": {
      "@lib/types": ["../../libs/types/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts",
              "src/app/plugins/**/*.ts",
              "../../libs/types/src/**/*.ts"],
  "exclude": ["eslint.config.js", "eslint.config.cjs", "eslint.config.mjs"],
  "references": [
    {
      "path": "../../libs/types/tsconfig.lib.json"
    }
  ]
}
